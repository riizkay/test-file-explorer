{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,

    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["../../packages/utils/*"],
      "@shared/*": ["../../packages/shared/*"]
    }
  }
}
