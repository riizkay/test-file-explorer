    "dev:backend": "cd apps/backend && bun run --watch main.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "mysql2": "^3.12.0",
    "sequelize": "^6.37.5"
  }
}
